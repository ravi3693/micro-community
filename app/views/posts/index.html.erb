<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', page_post_path(page_id: @page.id,id: post.id) %></td>
        <td><%= link_to 'Edit', edit_page_post_path(page_id: @page.id,id: post.id) %></td>
        <td><%= link_to 'Destroy', page_id: @page.id, id: post.id, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_page_post_path %>
<%= link_to 'Back', page_path(id: @page.id) %>
